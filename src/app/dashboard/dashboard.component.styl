.resultadosBox
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    margin-bottom 16px
    .card
        flex-grow 2
        margin 10px
        .card-content
            h2
            h3
            h4
            span
                color white
                font-family "Open Sans"
                font-weight 400
                text-transform uppercase
                font-size 16px
                line-height 1.85em
                margin 0
                letter-spacing -.05em
            h3
                font-size 42px
                line-height 1em
            h4
                margin-top 8px
            h4
            span
                font-size 12px
                text-transform initial
            span
                border 1px solid rgba(255, 255, 255,.3)
                background rgba(255, 255, 255,.3)
                padding 2px
                margin-right 4px
        &.amarrillo
            background #ff8c00
        &.celeste
            background #00bfff
        &.rojo
            background #dc143c
        &.verde
            background green