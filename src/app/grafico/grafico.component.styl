.graficoContent
    .graficoBox
        width 100%
        background white
        border-radius 10px 10px 0px 0
        overflow hidden
        .cabecera
            background #F74C1A
            padding-left 18px
            margin-bottom 20px
            h2
                margin 0
                line-height 2.25em
                font-size 18px
                height 40px
                color white
                font-family "Open Sans"
                font-weight 400
                span
                    font-size 14px
                    font-weight 300                
    div
        &.detailGrafico
            background white
            margin 60px auto 0
            text-align center
            padding-bottom 30px
            button
                margin-top 30px
            table
                border 1px solid #eee
                th
                td
                    text-align center